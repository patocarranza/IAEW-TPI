<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- Hibernate -->
    <filter>
        <filter-name>HibernateFilter</filter-name>
        <filter-class>HibernateSessionRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HibernateFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
        
    <!-- Enable CORS -->
    <filter>
        <filter-name>cross-origin</filter-name>
        <filter-class>org.eclipse.jetty.servlets.CrossOriginFilter</filter-class>
        <init-param>
            <param-name>allowedOrigins</param-name>
            <param-value>*</param-value>
        </init-param>
        <init-param>
            <param-name>allowedMethods</param-name>
            <param-value>*</param-value>
        </init-param>
        <init-param>
            <param-name>allowedHeaders</param-name>
            <param-value>*</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>cross-origin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- RS -->
    <servlet>
        <servlet-name>ReservasEndpoint</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>edu.utn.frc.laew.rest.ReservasApp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservasEndpoint</servlet-name>
        <url-pattern>/rest/ops/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AuxDataEndpoint</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>edu.utn.frc.laew.rest.ReservasApp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuxDataEndpoint</servlet-name>
        <url-pattern>/rest/aux/*</url-pattern>
    </servlet-mapping>
    <!-- End RS -->               
</web-app>
